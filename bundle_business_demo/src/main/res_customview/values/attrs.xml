<resources>
    <declare-styleable name="CustomConsoleContainerCV">
        <attr name="consoleMode" >
            <flag name="text" value="1"></flag>
            <flag name="image" value="2"></flag>
        </attr>
        <attr name="scrollOrientation">
            <flag name="X" value="1"></flag>
            <flag name="Y" value="2"></flag>
        </attr>
    </declare-styleable>
    <declare-styleable name="MyImageGalleryCV">
        <attr name="textOrientation">
            <flag name="X" value="1"></flag>
            <flag name="Y" value="2"></flag>
        </attr>
        <attr name="imageWidth" format="dimension">
        </attr>
        <attr name="imageHeight" format="dimension">
        </attr>
        <attr name="imageTextSize" format="dimension">
        </attr>
        <attr name="imageTextColor" format="color">
        </attr>
    </declare-styleable>
</resources>
